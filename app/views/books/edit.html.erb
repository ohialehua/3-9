<h1>Editing Book</h1>

<div>
　 <% if @book.errors.any? %>
 　　<h4 class="error-message"> <%= @book.errors.count %>errors prohibited this book from being saved:</h4>
 　 　 <% @book.errors.full_messages.each do |message| %>
 　    <li> <%= message %></li>
 　　 <% end %>
　<% end %>
</div>

<%= form_with model: @book, local: true do |f| %>
  <div class="edit">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div  class="edit">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="edit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path %>
  <a class="line">|</a>
  <%= link_to 'Back', books_path %>
<% end %>