<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>
  <div class="edit">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div  class="edit">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="edit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path %>
  <a>|</a>
  <%= link_to 'Back', books_path %>
<% end %>